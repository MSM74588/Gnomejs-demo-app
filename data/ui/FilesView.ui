<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="FbrFilesView">
        <property name="layout-manager">
            <object class="GtkBinLayout" />
        </property>

        <child>
            <object class="GtkScrolledWindow">
                <property name="child">
                    <object class="GtkListView">
                        <property name="enable-rubberband">true</property>
                        <property name="model">
                            <object class="GtkMultiSelection">
                                <property name="model" bind-source="FbrFilesView"
                                    bind-property="files" />
                            </object>
                        </property>
                        <property name="factory">
                            <object class="GtkBuilderListItemFactory">
                                <property name="resource">/org/example/filebrowser/ui/FileListItem.ui</property>
                            </object>
                        </property>
                    </object>
                </property>
            </object>
        </child>
    </template>
</interface>